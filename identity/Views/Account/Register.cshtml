@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form asp-action="Register" asp-controller="Account" method="post">
	<div asp-validation-summary="ModelOnly"></div>

	<div>
		<label asp-for="Email"></label>
		<input asp-for="Email" class="form-control col-12" />
		<span asp-validation-for="Email"></span>
	</div>
	<div>
		<label asp-for="UserName"></label>
		<input asp-for="UserName" class="form-control col-12" />
		<span asp-validation-for="UserName"></span>
	</div>
	<div>
		<label asp-for="Password"></label>
		<input asp-for="Password" class="form-control col-12" />
		<span asp-validation-for="Password"></span>
	</div>
	<div>
		<label asp-for="RePassword"></label>
		<input asp-for="RePassword" class="form-control col-12" />
		<span asp-validation-for="RePassword"></span>
	</div>
	<div >
		<input type="submit" value="Register" class="btn btn-success col-12 mt-2" />
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}
